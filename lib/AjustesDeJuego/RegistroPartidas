//aqui voy a hacer el registro de partidas del jugasor despues lo explico bien
import 'package:shared_preferences/shared_preferences.dart';

class RegistroPartidas{
  static const String victorias = 'partidasGanadas';
  static const String perdidas = 'partidasperdidas';

  static Future<int> getVictorias() async {
    final obtener = await SharedPreferences.getInstance();
    return obtener.getInt(victorias) ?? 0;
  }

  static Future<int> getPerdiste() async {
    final obtener = await SharedPreferences.getInstance();
    await obtener.getInt(perdidas) ?? 0;
  }

  static Future<void> incrementarPerdidas() async {
    final obtener = await SharedPreferences.getInstance();
    int actuales = obtener.getInt(perdidas) ?? 0;
    await obtener.setInt(perdidas, actuales + 1);
  }

  static Future<void> incrementarvitorias() async {
    final obtener = await SharedPreferences.getInstance();
    int actuales = obtener.getInt(victorias) ?? 0;
    await obtener.setInt(victorias, actuales + 1);
  }
}

